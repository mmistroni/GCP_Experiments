{
    "name": "GCP Experiments",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "features": {
        // This installs gcloud, gsutil, and bq automatically
        "ghcr.io/devcontainers/features/google-cloud-cli:1": {
            "version": "latest"
        }
    },
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "python.defaultInterpreterPath": "/workspaces/GCP_Experiments/.venv/bin/python",
                "python.terminal.activateEnvironment": true
            },
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "googlecloudtools.cloudcode", // For Cloud Run/BigQuery integration
                "njpwerner.autodocstring"      // Helps with Pydantic documentation
            ]
        }
    },
    "postCreateCommand": "python3 -m venv .venv && ./.venv/bin/pip install --upgrade pip && ./.venv/bin/pip install -r requirements.txt && echo 'source /workspaces/GCP_Experiments/.venv/bin/activate' >> ~/.bashrc",
    "remoteUser": "vscode"
}