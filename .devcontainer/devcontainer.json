{
    "name": "GCP Experiments (Python Venv)",
    
    "build": {
        "dockerfile": "Dockerfile"
    },
    
    // NO FEATURES SECTION

    "customizations": {
        "vscode": {
            "settings": {
                // Must be the absolute path to the venv python executable
                "python.defaultInterpreterPath": "/workspaces/GCP_Experiments/.venv/bin/python", 
                
                // Keep activation settings
                "python.terminal.activateEnvironment": true,
                "python.analysis.extraPaths": ["/workspaces/GCP_Experiments/.venv/lib/python3.10/site-packages"],
                
                "terminal.integrated.defaultProfile.linux": "bash"
            },
            
            "extensions": [
                "ms-python.python",        
                "ms-python.vscode-pylance", 
                // ... rest of extensions ...
                "ms-vscode.live-server",    
                "eamodio.gitlens",          
                "humao.rest-client"         
            ]
        }
    },
    
    "remoteUser": "vscode"
}