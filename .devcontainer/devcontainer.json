{
    "name": "GCP Experiments",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "settings": {
                // Force Bash so 'source' works in the future
                "terminal.integrated.defaultProfile.linux": "bash",
                "python.defaultInterpreterPath": "/workspaces/GCP_Experiments/.venv/bin/python",
                "python.terminal.activateEnvironment": true
            },
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance"
            ]
        }
    },
    // Use '.' instead of 'source' for universal compatibility during setup
    // Fix: Using single quotes inside the string and double ampersands for chaining
    "postCreateCommand": "python3 -m venv .venv && ./.venv/bin/pip install -r dataflow/shareloader/requirements_dftester.txt && echo 'source /workspaces/GCP_Experiments/.venv/bin/activate' >> ~/.bashrc",
    "remoteUser": "vscode"
}